{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "LANGUAGE",
  "scopeName": "source.LANGUAGE-Programming-Language",
  "fileTypes": ["LANGUAGE"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords-control" },
    { "include": "#keywords-logical" },
    { "include": "#keywords-builtin" },
    { "include": "#booleans" },
    { "include": "#functions-def" },
    { "include": "#functions-call" },
    { "include": "#numbers" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.language-lang",
      "match": "#[^#]*(#|$)"
    },
    "strings": {
      "name": "string.quoted.double.language-lang",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.language-lang",
          "match": "\\\\."
        }
      ]
    },
    "keywords-control": {
      "name": "keyword.control.language-lang",
      "match": "(?<![a-zA-Z0-9_])(If|Elif|Else|While|For|To|End|Return)(?![a-zA-Z0-9_])"
    },
    "keywords-logical": {
      "name": "keyword.operator.word.language-lang",
      "match": "(?<![a-zA-Z0-9_])(And|Or|Not)(?![a-zA-Z0-9_])"
    },
    "keywords-builtin": {
      "name": "support.function.builtin.language-lang",
      "match": "(?<![a-zA-Z0-9_])(Print|Push|Pop|Length|Upper|Lower|Contains|Substring)(?![a-zA-Z0-9_])"
    },
    "booleans": {
      "name": "constant.language.language-lang",
      "match": "(?<![a-zA-Z0-9_])(True|False)(?![a-zA-Z0-9_])"
    },
    "functions-def": {
      "match": "(?<![a-zA-Z0-9_])(Func)\\s+([A-Za-z_][A-Za-z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.declaration.function.language-lang" },
        "2": { "name": "entity.name.function.language-lang" }
      }
    },
    "functions-call": {
      "match": "([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()",
      "captures": {
        "1": { "name": "entity.name.function.language-lang" }
      }
    },
    "numbers": {
      "name": "constant.numeric.language-lang",
      "match": "(?<![a-zA-Z_])\\b[0-9]+(\\.[0-9]+)?\\b"
    },
    "operators": {
      "name": "keyword.operator.language-lang",
      "match": "(==|!=|<=|>=|<|>|\\+|-|\\*|\\/|=)"
    }
  }
}