{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "LANGUAGE",
  "scopeName": "source.language-lang",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords-control" },
    { "include": "#keywords-logical" },
    { "include": "#keywords-builtin" },
    { "include": "#booleans" },
    { "include": "#functions-def" },
    { "include": "#functions-call" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.hash.language-lang",
      "match": "#[^#]*#?",
      "captures": {
        "0": { "name": "comment.line.hash.language-lang" }
      }
    },
    "strings": {
      "name": "string.quoted.double.language-lang",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.language-lang",
          "match": "\\\\."
        }
      ]
    },
    "keywords-control": {
      "name": "keyword.control.language-lang",
      "match": "\\b(If|Elif|Else|While|For|To|End|Return)\\b"
    },
    "keywords-logical": {
      "name": "keyword.operator.logical.language-lang",
      "match": "\\b(And|Or|Not)\\b"
    },
    "keywords-builtin": {
      "name": "keyword.other.language-lang",
      "match": "\\b(Print|Push|Pop|Length|Upper|Lower|Contains|Substring)\\b"
    },
    "booleans": {
      "name": "constant.language.boolean.language-lang",
      "match": "\\b(True|False)\\b"
    },
    "functions-def": {
      "patterns": [
        {
          "match": "\\b(Func)\\s+([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.function.language-lang" },
            "2": { "name": "entity.name.function.language-lang" }
          }
        }
      ]
    },
    "functions-call": {
      "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()",
      "captures": {
        "1": { "name": "entity.name.function.language-lang" }
      }
    },
    "numbers": {
      "name": "constant.numeric.language-lang",
      "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
    },
    "operators": {
      "name": "keyword.operator.language-lang",
      "match": "(==|!=|<=|>=|<|>|\\+|-|\\*|/|=)"
    },
    "variables": {
      "name": "variable.other.language-lang",
      "match": "\\b[a-z_][A-Za-z0-9_]*\\b"
    }
  }
}
